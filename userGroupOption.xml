<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/userGroupOption.xsd">
	<import>
		<categories>
			<category name="user.guestbook">
				<parent>user</parent>
				<options>module_guestbook</options>
			</category>
			
			<category name="mod.guestbook">
				<parent>mod</parent>
				<options>module_guestbook</options>
			</category>
			
			<category name="admin.guestbook">
				<parent>admin</parent>
				<options>module_guestbook</options>
			</category>
		</categories>

		<options>
			<option name="user.guestbook.canViewGuestbook">
				<categoryname>user.guestbook</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="user.guestbook.canAddEntry">
				<categoryname>user.guestbook</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="mod.guestbook.canModerateEntry">
				<categoryname>mod.guestbook</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
			
			<option name="admin.guestbook.canManageGuestbook">
				<categoryname>admin.guestbook</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
			</option>
		</options>
	</import>
</data>