<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/option.xsd">
	<import>
		<categories>
			<category name="guestbook">
				<permissions>admin.guestbook.canManageGuestbook</permissions>
				<options>module_guestbook</options>
			</category>
			
			<category name="guestbook.general">
				<parent>guestbook</parent>
			</category>
		</categories>

		<options>
			<option name="module_guestbook">
				<categoryname>module.community</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>

			<option name="guestbook_entry_max_length">
				<categoryname>guestbook.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>1000</defaultvalue>
			</option>
			
			<option name="guestbook_entries_per_page">
				<categoryname>guestbook.general</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>10</defaultvalue>
			</option>
		</options>
	</import>
</data>